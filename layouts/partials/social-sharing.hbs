<section class="share">
    <h4>Share this post</h4>
    <a class="icon-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" rel="noopener noreferrer nofollow"
        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
        {{> "icons/twitter"}}
    </a>
    <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" rel="noopener noreferrer nofollow"
        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
        {{> "icons/facebook"}}
    </a>
    <a class="icon-linkedin" href="http://www.linkedin.com/shareArticle?mini=true&amp;url={{url absolute="true"}}&amp;title={{encode title}}" rel="noopener noreferrer nofollow"
        onclick="window.open(this.href, 'linkedin-share','width=490,height=530');return false;">
        {{> "icons/linkedin"}}
    </a>
</section>